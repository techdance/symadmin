{% extends '@EasyAdmin/default/new.html.twig' %}

{% block entity_form %}
     {{ form_start(form) }}

        {{ form_row(form.prefix) }}
        {{ form_row(form.firstName) }} 
        {{ form_row(form.lastName) }}

    {{ form_end(form,{'render_rest': true}) }}
{% endblock entity_form %}


{% block body_javascript %}
    {{ parent() }}
    <script src="/bundles/easyadmin/select2/i18n/en.js"></script>
    <script type="text/javascript">
        $(function() {
            
            function init() {
                $('#user_groups').select2({
                    theme: 'bootstrap',
                    language: 'en',
                    tags: true,
                    tokenSeparators: [',', ' '],              
                });
            }

            $(document).on('easyadmin.collection.item-added', init);
            init();

            $('#user_groups>option').each(function(i, el) {
                if ($(el).text() == 'ROLE_DEVELOPER') {
                    $(el).remove();
                }
            });
        })
    </script>
{% endblock %}


